{
  "name": "react-native-ts-boilerplate",
  "version": "0.0.0",
  "private": true,
  "author": "Charles Jacquin <charles.jacquin@gmail.com>",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/React-native-typescript-boilerplate.git"
  },
  "scripts": {
    "test": "nps test",
    "postinstall": "rimraf node_modules/intl/.babelrc",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "install": "rimraf node_modules/glamorous-native/typings -rf",
    "start": "nps"
  },
  "dependencies": {
    "expo": "20.0.0",
    "glamorous-native": "^1.1.2",
    "prop-types": "^15.5.10",
    "react": "16.0.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-20.0.0.tar.gz"
  },
  "devDependencies": {
    "@chazzz/base-type": "^1.0.5",
    "@chazzz/simple-doc": "0.0.3",
    "@chazzz/tslint-react-config": "^1.0.1",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^21.1.0",
    "@types/marked": "^0.3.0",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.31",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.7",
    "@types/react-dom": "^15.5.4",
    "@types/react-helmet": "^5.0.3",
    "@types/react-native": "^0.48.7",
    "@types/react-navigation": "^1.0.20",
    "@types/react-test-renderer": "^15.5.4",
    "@types/rimraf": "^2.0.2",
    "babel-jest": "^21.0.2",
    "babel-plugin-jest-hoist": "^21.0.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "child-process-promise": "^2.2.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "exp": "^44.0.0",
    "fbemitter": "^2.1.1",
    "fs-extra": "^4.0.2",
    "git-branch": "^1.0.0",
    "html": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "jest-expo-ts": "^21.0.0",
    "jest-html-reporter": "^0.5.1",
    "json-format": "^1.0.1",
    "lint-staged": "^4.2.3",
    "marked": "^0.3.6",
    "nock": "^9.0.21",
    "node-fetch": "^1.7.3",
    "nps": "^5.7.1",
    "nps-utils": "^1.3.0",
    "plop": "^1.8.1",
    "prettier": "^1.7.0",
    "react-dom": "16.0.0",
    "react-helmet": "^5.2.0",
    "react-navigation": "^1.0.0-beta.12",
    "react-test-renderer": "16.0.0",
    "redux-mock-store": "^1.3.0",
    "remap-istanbul": "^0.9.5",
    "remote-redux-devtools": "^0.5.12",
    "rimraf": "^2.6.2",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "xhr2": "^0.1.4",
    "yargs": "^9.0.1"
  },
  "jest-html-reporter": {
    "pageTitle": "Test report",
    "outputPath": "docs/test-report/index.html",
    "includeFailureMsg": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*(*.ts|*.tsx)": [
      "prettier --write",
      "git add -A"
    ]
  },
  "standard-version": {
    "scripts": {
      "postcommit": "npm start release.postcommit",
      "posttag": "npm start release.posttag"
    }
  }
}
