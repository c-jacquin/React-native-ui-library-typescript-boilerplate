{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react-native",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "removeComments": true,
        "lib":["dom","es2017"],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "typeRoots": [
            "src/typings"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/__mocks__/*",
        "src/**/__tests__/*",
        "src/**/types.ts",
        "src/components/**/example.tsx"
    ]
}
